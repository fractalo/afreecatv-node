{
  "$schema": "https://json.schemastore.org/tsconfig",
  
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "noEmit": true,

    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },

  "include": ["src", "test"],
  "exclude": ["node_modules"],
}
